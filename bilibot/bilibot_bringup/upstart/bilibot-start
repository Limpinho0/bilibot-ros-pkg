#!/bin/bash
# this file is generated by bilibot_bringup/upstart/install.bash

log_file=/tmp/bilibot-upstart.log
DATE=`date`

if [ -s /etc/ros/setup.bash ]; then
    echo "$DATE: bilibot-start using setup file /etc/ros/setup.bash" >> $log_file
    source /etc/ros/setup.bash
else
    echo "$DATE: bilibot-start using setup file /opt/ros/electric/setup.bash" >> $log_file
    source /opt/ros/electric/setup.bash
fi

interface=wlan0
echo "$DATE: bilibot-start on interface $interface" >> $log_file

export ROS_IP=`ifconfig $interface | grep -o 'inet addr:[^ ]*' | cut -d: -f2`

echo "$DATE: bilibot-start setting ROS_IP=$ROS_IP" >> $log_file

if [ "$ROS_IP" = "" ]; then
    echo "$DATE: bilibot-start can't run with empty ROS_IP." >> $log_file
    exit 1
fi

resetACM
sleep 4


if [ -s /etc/ros/electric/bilibot.launch ]; then
    setuidgid bilibot roslaunch /etc/ros/electric/bilibot.launch
else
    setuidgid bilibot roslaunch bilibot_bringup minimal.launch
fi
